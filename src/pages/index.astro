<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: calc(50% - 220px);;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	#logo {
		opacity: 0;
		animation: popin 1.5s ease-in-out forwards;
	}
	@keyframes popin {
		0% {
			transform: scale(0.5) translateY(-33%);
			opacity: 0;
		}
		25% {
			transform: scale(1.25) translateY(-33%);
		}
		100% {
			transform: scale(1) translateY(-40%);
			opacity: 1;
		}
	}

	#logo1 {
		animation: goup 1s ease-in-out forwards;
	}
	#logo2 {
		animation: godown 1s ease-in-out forwards;
	}

	@keyframes goup {
		0% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-25%);
		}
		100% {
			transform: translateY(0);
		}
	}
	@keyframes godown {
		0% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(25%);
		}
		100% {
			transform: translateY(0);
		}
	}
</style>
